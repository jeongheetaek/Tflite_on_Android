<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignUpActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:baselineAligned="false"
            android:contentDescription="앱 사용 도움말"
            android:scaleType="centerInside"
            android:src="@drawable/m6" />


        <ImageView
            android:id="@+id/infobttn"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:baselineAligned="false"
            android:contentDescription="음성인식"
            android:scaleType="fitXY"
            android:src="@drawable/m0" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar3"
        android:layout_width="250dp"
        android:layout_height="360dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="3dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/detectbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:baselineAligned="false"
            android:scaleType="fitXY"
            android:src="@drawable/m3" />



        <ImageView
            android:id="@+id/numbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:baselineAligned="false"
            android:scaleType="fitXY"
            android:src="@drawable/m2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/infobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:baselineAligned="false"
            android:scaleType="fitXY"
            android:src="@drawable/m4" />

        <ImageView
            android:id="@+id/sitbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:baselineAligned="false"
            android:scaleType="fitXY"
            android:src="@drawable/m5" />

    </LinearLayout>

</LinearLayout>